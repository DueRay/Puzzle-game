{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "amd": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "comma-dangle": 0,
    "no-undef": 2,
    "global-strict": 0,
    "no-underscore-dangle": 0,
    "no-console": 2,
    "no-unused-vars": 2,
    "no-unreachable": 2,
    "no-alert": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "curly": 2,
    "eqeqeq": 2,
    "no-extra-semi": "error",
    "react/display-name": 0,
    "react/jsx-first-prop-new-line": ["error", "never"],
    "react/jsx-max-props-per-line": ["error", {"maximum": 3}],
    "react/jsx-closing-bracket-location": ["error", "after-props"]
  }
}
